{
  "name": "dragon-isle-mobile",
  "version": "1.0.0",
  "description": "Mobile PWA client for Dragon Isle multiplayer game",
  "type": "module",
  "scripts": {
    "start": "vite --host 0.0.0.0 --port 3010",
    "dev": "vite --host 0.0.0.0 --port 3010",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 3010",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "playwright": "^1.40.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "workbox-build": "^7.0.0",
    "workbox-window": "^7.0.0"
  }
}